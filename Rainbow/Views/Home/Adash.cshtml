@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Rainbow Admin Dashboard</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #fff0f5, #e0f7fa);
            font-family: 'Segoe UI', sans-serif;
            padding-top: 70px;
        }

        .navbar-brand {
            font-weight: bold;
            background: linear-gradient(to right, red, orange, yellow, green, blue, indigo, violet);
            -webkit-background-clip: text;
            color: transparent;
        }

        .dashboard-title {
            background: linear-gradient(90deg, #ff6ec4 0%, #7873f5 100%);
            color: white;
            padding: 1rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

        .action-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            border-radius: 15px;
        }

            .action-card:hover {
                transform: scale(1.03);
                box-shadow: 0 10px 20px rgba(0,0,0,0.15);
            }

        .action-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-light fixed-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><i class="fa-solid fa-cake-candles"></i> Rainbow Admin</a>
            <div class="d-flex ms-auto">
                @Html.ActionLink("View Site", "Index", "Home", null, new { @class = "btn btn-outline-primary me-2" })
                @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn btn-outline-danger" })
            </div>
        </div>
    </nav>

    <!-- Dashboard Content -->
    <div class="container my-4">
        <div class="dashboard-title text-center mb-5">
            <h1><i class="fa-solid fa-cake-candles me-2"></i>Welcome, Admin!</h1>
            <p class="mb-0">Manage Rainbow Cake Shop with a smile 🎉</p>
        </div>

        <div class="row g-4">

            <div class="col-md-4">
                <div class="card action-card text-center p-4 bg-white">
                    <div class="action-icon text-primary"><i class="fa-solid fa-folder-plus"></i></div>
                    <h5>Add Category</h5>
                    @Html.ActionLink("Go", "Categourie", "Home", null, new { @class = "btn btn-outline-primary mt-3" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="card action-card text-center p-4 bg-white">
                    <div class="action-icon text-success"><i class="fa-solid fa-cake-candles"></i></div>
                    <h5>Add Cake</h5>
                    @Html.ActionLink("Go", "Cake", "Home", null, new { @class = "btn btn-outline-success mt-3" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="card action-card text-center p-4 bg-white">
                    <div class="action-icon text-info"><i class="fa-solid fa-display"></i></div>
                    <h5>Display Cakes</h5>
                    @Html.ActionLink("Go", "DisplayC", "Home", null, new { @class = "btn btn-outline-info mt-3" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="card action-card text-center p-4 bg-white">
                    <div class="action-icon text-warning"><i class="fa-solid fa-tags"></i></div>
                    <h5>Add Offer</h5>
                    @Html.ActionLink("Go", "Offer", "Home", null, new { @class = "btn btn-outline-warning mt-3" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="card action-card text-center p-4 bg-white">
                    <div class="action-icon text-danger"><i class="fa-solid fa-gift"></i></div>
                    <h5>Show Offers</h5>
                    @Html.ActionLink("Go", "Doffer", "Home", null, new { @class = "btn btn-outline-danger mt-3" })
                </div>
            </div>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
