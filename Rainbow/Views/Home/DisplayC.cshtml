@model List<Rainbow.Models.Cake>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    .cake-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .action-icons a {
        margin-right: 10px;
    }

    .table th {
        background-color: #f8bbd0;
        color: #5d4037;
    }

    .table td {
        vertical-align: middle;
    }

    .btn-action {
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    .btn-delete {
        background-color: #f44336;
        color: white;
    }

    .btn-edit {
        background-color: #ff9800;
        color: white;
    }

    .btn-delete:hover {
        background-color: #d32f2f;
    }

    .btn-edit:hover {
        background-color: #fb8c00;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4"><i class="fa-solid fa-cake-candles"></i> Cake List</h2>
    <table class="table table-bordered table-hover shadow">
        <thead class="table-pink text-center">
            <tr>
                <th>Cake Name</th>
                <th>Description</th>
                <th>Price (₹)</th>
                <th>Category</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CakeName</td>
                    <td>@item.Description</td>
                    <td>₹@item.Price</td>
                    <td>@item.Categoury?.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.image))
                        {
                            <img src="@item.image" class="cake-img" alt="Cake Image" />
                        }
                        else
                        {
                            <span class="text-muted">No image</span>
                        }
                    </td>
                    <td class="action-icons">
                        @Html.ActionLink("Delete", "Delete", "Home", new { Id = item.CId }, new { @class = "btn btn-delete btn-action", @onclick = "return confirm('Are you sure you want to delete this cake?');" })
                        @Html.ActionLink("Edit", "Edit", "Home", new { Id = item.CId }, new { @class = "btn btn-edit btn-action" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
