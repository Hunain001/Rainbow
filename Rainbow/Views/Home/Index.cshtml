            <span class="carousel-control-next-icon bg-pink rounded-circle p-3"></span>
        </button>
    </div>

    <!-- 🌟 Special Cakes Section -->
    <h2 class="text-center mt-5 animate__animated animate__fadeIn">Our Special Cakes</h2>
    <div class="row justify-content-center mt-4">
        @foreach (var cake in specials)
        {
                <div class="card m-3 animate__animated animate__zoomIn" style="width: 18rem;">
                    <img src="@cake.image" class="card-img-top" alt="Cake Image" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@cake.CakeName</h5>
                        <p class="card-text"><strong>Price:</strong> ₹@cake.Price</p>
                    </div>
                </div>
        }
    </div>

    <!-- 💥 Offer Section -->
    <!-- 💥 Offer Section -->
    @if (offer != null)
    {
            <div class="mt-5 p-4 bg-white border rounded shadow animate__animated animate__fadeInUp">
                <h2 class="text-center text-danger">🎉 Special Offer 🎉</h2>
                <h4 class="text-center">@offer.Description</h4>
                <p class="text-center">Discount Price: ₹@offer.Discountprice</p>

                <!-- Countdown Timer -->
                <div class="text-center mb-3">
                    <span id="countdown" class="fs-4 text-primary"></span>
                </div>

                <!-- Offer Cakes -->
                <div class="row justify-content-center">
                @foreach (var cake in offerCakes)
                {
                            <div class="col-md-3">
                                <img src="@cake.image" class="img-fluid rounded mb-3 shadow animate__animated animate__zoomIn" />
                            </div>
                }
                </div>
            </div>

            <script>

                        const targetDate = new Date('@offer.Validtill.ToString("yyyy-MM-ddTHH:mm:ss")');
                const countdown = document.getElementById("countdown");

                function updateCountdown() {
                    const now = new Date();
                    const diff = targetDate - now;

                    if (diff <= 0) {
                        countdown.innerText = "Offer expired";
                        return;
                    }

                    const hours = Math.floor(diff / (1000 * 60 * 60));
                    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                    // Update the countdown text with correct string interpolation
                    countdown.innerText = `${hours}h ${minutes}m ${seconds}s left`;
                }

                // Update countdown every second
                setInterval(updateCountdown, 1000);
                updateCountdown();
            </script>
    }






    <section class="py-5 animate__animated animate__fadeIn" style="background-color: #fef7f1;">
