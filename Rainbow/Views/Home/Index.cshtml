            Layout = null;

            var specials = ViewBag.SpecialCakes as List<Rainbow.Models.Cake>;
            var offer = ViewBag.Offer as Rainbow.Models.Offer;
            var offerCakes = ViewBag.OfferCakes as List<Rainbow.Models.Cake>;
        }
        @{
            var featuredCake = ViewBag.FeaturedCake as Rainbow.Models.Cake;
        }
    </script>

