<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Rainbow Bakers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --primary-pink: #ffebee;
            --secondary-pink: #fce4ec;
            --accent-pink: #f8bbd0;
            --dark-pink: #f48fb1;
            --text-color: #5d4037;
        }

        body {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            background-color: var(--primary-pink);
            color: var(--text-color);
            overflow-x: hidden;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 24px;
            color: #d81b60 !important;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
            animation: pulse 2s infinite;
        }

        .carousel img {
            height: 500px;
            object-fit: cover;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(216,27,96,0.2);
        }

        .nav-link {
            font-size: 18px;
            color: #d81b60 !important;
            transition: all 0.3s ease;
            position: relative;
        }

            .nav-link:hover {
                transform: translateY(-3px);
            }

            .nav-link:after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: 0;
                left: 0;
                background-color: #d81b60;
                transition: width 0.3s ease;
            }

            .nav-link:hover:after {
                width: 100%;
            }

        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-15px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(216,27,96,0.1);
            transition: all 0.3s ease;
            background-color: white;
            animation: float 4s ease-in-out infinite;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(216,27,96,0.2);
            }

        .card-img-top {
            transition: all 0.5s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.05);
        }

        .sparkle {
            position: absolute;
            width: 5px;
            height: 5px;
            background-color: #ffcdd2;
            border-radius: 50%;
            pointer-events: none;
            animation: sparkle 2s linear forwards;
        }

        @@keyframes sparkle {
            0% {
                transform: scale(0);
                opacity: 0;
            }

            50% {
                transform: scale(1);
                opacity: 1;
            }

            100% {
                transform: scale(0);
                opacity: 0;
            }
        }

        .banner-heading {
            position: relative;
            display: inline-block;
        }

            .banner-heading:after {
                content: '';
                position: absolute;
                width: 100%;
                height: 3px;
                bottom: -5px;
                left: 0;
                background: linear-gradient(90deg, transparent, #d81b60, transparent);
                animation: underline 3s infinite;
            }

        @@keyframes underline {
            0% {
                transform: scaleX(0);
            }

            50% {
                transform: scaleX(1);
            }

            100% {
                transform: scaleX(0);
            }
        }

        .banner-btn {
            position: relative;
            overflow: hidden;
        }

            .banner-btn:after {
                content: '';
                position: absolute;
                top: -50%;
                left: -60%;
                width: 200%;
                height: 200%;
                background: rgba(255,255,255,0.2);
                transform: rotate(30deg);
                transition: all 0.3s;
            }

            .banner-btn:hover:after {
                left: 100%;
            }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .text-danger {
            animation: pulse 1.5s infinite;
            text-shadow: 0 0 10px rgba(216,27,96,0.3);
        }

        footer a {
            position: relative;
            transition: all 0.3s;
        }

            footer a:hover {
                padding-left: 10px;
            }

        @@media (max-width: 768px) {
            .carousel img {
                height: 300px;
            }

            .banner-heading {
                font-size: 2rem;
            }
        }

        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: var(--primary-pink);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--dark-pink);
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #d81b60;
            }


        .btn-cake-glow {
            background-color: #d81b60;
            color: white !important;
            font-weight: bold;
            border-radius: 30px;
            padding: 10px 25px;
            font-size: 18px;
            box-shadow: 0 0 12px rgba(216, 27, 96, 0.4);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            display: inline-block;
            text-align: center;
            text-decoration: none;
        }

            .btn-cake-glow:hover {
                background-color: #c2185b;
                color: #fff !important;
                box-shadow: 0 0 20px rgba(216, 27, 96, 0.6);
                transform: scale(1.05);
            }

    </style>
</head>
<body>

    <!-- Sparkle effect script -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.body.addEventListener('click', function (e) {
                const sparkle = document.createElement('div');
                sparkle.className = 'sparkle';
                sparkle.style.left = e.clientX + 'px';
                sparkle.style.top = e.clientY + 'px';
                document.body.appendChild(sparkle);

                setTimeout(() => {
                    sparkle.remove();
                }, 2000);
            });
        });
        @{
