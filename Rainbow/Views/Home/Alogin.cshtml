@model Rainbow.Models.Admin

@{
    ViewData["Title"] = "Admin Login - Cake Shop";
}

<!-- Include Bootstrap CSS (if not already in your layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Optional: Add a bit of custom styling -->
<style>
    body {
        background: #fff0f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-card {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

        .login-card h2 {
            color: #d63384;
            font-weight: bold;
        }

    .btn-cake {
        background-color: #d63384;
        color: white;
        font-weight: bold;
    }

        .btn-cake:hover {
            background-color: #c2185b;
        }

    .cake-icon {
        font-size: 40px;
        color: #d63384;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="login-card text-center">
                <div class="cake-icon mb-3">🎂</div>
                <h2 class="mb-4">Cake Shop Admin Login</h2>
                @using (Html.BeginForm("Alogin", "Home", FormMethod.Post))
                {
                    <div class="mb-3 text-start">
                        @Html.LabelFor(x => x.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter your email" })
                    </div>
                    <div class="mb-3 text-start">
                        @Html.LabelFor(x => x.Password, new { @class = "form-label" })
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Enter your password" })
                    </div>
                    <button type="submit" class="btn btn-cake w-100">Login</button>
                }

                @if (ViewData["k"] != null)
                {
                    <div class="alert alert-danger mt-3">
                        @ViewData["k"]
                    </div>
                }
            </div>
        </div>
    </div>
</div>
